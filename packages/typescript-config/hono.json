{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "types": ["bun-types"],
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "verbatimModuleSyntax": true
  }
}
